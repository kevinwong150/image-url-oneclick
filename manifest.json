{
  "name": "Image URL Oneclick",
  "version": "1.0",
  "description": "Get image URL in one click",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "static/icon_32.png"
  },
  "icons": {
    "48": "static/icon_32.png",
    "128": "static/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": ["./src/js/background.js"],
    "persistent": true
  },
  "options_ui": {
    "page": "./src/options.html",
    "open_in_tab": true
  }
}
