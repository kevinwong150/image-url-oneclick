{
  "name": "Image URL Oneclick",
  "version": "1.0",
  "description": "One click to save your opened image tabs into browsers",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "static/icon_32.png"
  },
  "icons": {
    "48": "static/icon_32.png",
    "128": "static/icon_128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["./src/background.js"],
    "persistent": true
  },
  "options_ui": {
    "page": "./src/options.html",
    "open_in_tab": true
  }
}
